@model IEnumerable<Account>

@{
	ViewData["Title"] = "Admin Page";

}

<h2 class="text-primary">
	Welcome as an Admin
	here you can see all the Accounts details and more
</h2>

<h5 class="text-success mt-4">Accounts table</h5>
<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>ID</th>
			<th>FullName</th>
			<th>PIN</th>
			<th>PhoneNumber</th>
			<th>E-mail</th>
			<th>Government</th>
			<th>Balance</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>


		@{
			foreach (var acc in Model)
			{
				ViewBag.message = ViewBag.message + 1;
				<tr>
					<td>@ViewBag.message</td>
					<td>
						<a href="@Url.Action("Accountinfo" , "home" , new { id = acc.Id})" class="btn bg-success text-white">
							Go to
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
								<path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0v-6z" />
							</svg>
						</a>
					</td>
					<td>@acc.FirstName @acc.LastName</td>
					<td>@acc.Pin</td>
					<td>@acc.PhoneNumber</td>
					<td>@acc.Email</td>
					<td>@acc.City</td>
					<td>@acc.Balance</td>
					<td>
						<div@* class="d-flex flex-row"*@>
							<a href="@Url.Action("Edit", "Account" , new {id = acc.Id})" class="btn bg-primary text-white">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
								</svg>
								<span>Edit</span>
							</a>
							<a href="@Url.Action("Delete", "Account" , new { id = acc.Id})" class="btn bg-danger text-white">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
									<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
									<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
								</svg>
								Delete
							</a>
							</div>
					</td>
				</tr>
			}
		}
	</tbody>

</table>